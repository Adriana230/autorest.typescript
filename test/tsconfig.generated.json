{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    // TODO: change the individual vanilla/..., azure/..., to a ** glob
    // after TypeScript 2.8.1 is released
    // See https://github.com/Microsoft/TypeScript/pull/20639
    "vanilla/generated/**/*.ts",
    "azure/generated/**/*.ts"
  ]
}

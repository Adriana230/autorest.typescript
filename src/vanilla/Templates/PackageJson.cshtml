@using System.Linq
@using AutoRest.Core.Utilities;
@using AutoRest.TypeScript.vanilla.Templates
@inherits AutoRest.Core.Template<AutoRest.TypeScript.Model.CodeModelTS>
{
  "name": "@(Model.PackageName)",
  "author": "Microsoft Corporation",
  "description": "@(Model.Name.ToPascalCase()) Library for node and browser javascript.",
  "version": "@(Model.PackageVersion)",
  "dependencies": {
    @(Model.PackageDependencies())
  },
  "keywords": [ "node", "azure", "typescript", "browser", "isomorphic"],
  "license": "MIT",
  "main": "./dist/node/@(Model.Name.ToCamelCase()).js",
  "types": "./typings/lib/@(Model.Name.ToCamelCase()).d.ts",
  "devDependencies": {
    "ts-loader": "^2.3.4",
    "tslint": "^5.2.0",
    "typescript": "^2.5.2",
    "webpack": "^3.5.5",
    "uglify-es": "^3.0.28"
  },
  "homepage": "http://github.com/azure/azure-sdk-for-ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/azure/azure-sdk-for-ts.git"
  },
  "bugs": {
    "url": "http://github.com/Azure/azure-sdk-for-ts/issues"
  },
  "scripts": {
    "tsc": "tsc -p tsconfig.node.json && tsc -p tsconfig.browser.json",
    "build": "npm -s run-script tsc && webpack && node node_modules/uglify-es/bin/uglifyjs --source-map -c -m -o bundle.min.js bundle.js"
  }
}
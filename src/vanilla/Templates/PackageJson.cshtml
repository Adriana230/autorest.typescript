@using AutoRest.Core.Utilities;
@inherits AutoRest.Core.Template<AutoRest.TypeScript.Model.CodeModelTS>
{
  "name": "@(Model.Settings.PackageName)",
  "author": "Microsoft Corporation",
  "description": "@(Model.Name.ToPascalCase()) Library with typescript type definitions for node.js and browser.",
  "version": "@(Model.Settings.PackageVersion)",
  "dependencies": {
    @(Model.PackageDependencies())
  },
  "keywords": [
    "node",
    "azure",
    "typescript",
    "browser",
    "isomorphic"
  ],
  "license": "MIT",
@if (string.IsNullOrEmpty(Model.Settings.DefaultApiVersion))
{
@:  "main": "./dist/lib/@(Model.Name.ToCamelCase()).js",
@:  "types": "./typings/lib/@(Model.Name.ToCamelCase()).d.ts",
}
else
{
@:  "main": "./@(Model.Settings.DefaultApiVersion)/cjs/lib/@(Model.Name.ToCamelCase()).js",
@:  "module": "./@(Model.Settings.DefaultApiVersion)/esm/lib/@(Model.Name.ToCamelCase()).js",
@:  "types": "./@(Model.Settings.DefaultApiVersion)/cjs/lib/@(Model.Name.ToCamelCase()).d.ts",
}
  "devDependencies": {
    "ts-loader": "^4.4.2",
    "tslib": "^1.9.3",
    "typescript": "^3.0.3",
    "webpack": "^4.17.2",
    "webpack-cli": "^3.1.0"
  },
  "homepage": "@(Model.HomePageUrl)",
  "repository": {
    "type": "git",
    "url": "@(Model.RepositoryUrl)"
  },
  "bugs": {
    "url": "@(Model.BugsUrl)"
  },
  "scripts": {
    "build": "tsc @(string.IsNullOrEmpty(Model.Settings.DefaultApiVersion) ? "" : "-b ")&& webpack"
  }
}